{
    "name": "jobsity/slim-challenge",
    "description": "PHP Challenge - Jobsity",
    "type": "project",
    "require": {
        "php": "^7.3 || ^8.0",
        "slim/slim": "^4.7",
        "slim/psr7": "^1.3",
        "swiftmailer/swiftmailer": "^6.0",
        "php-di/php-di": "^6.3",
        "symfony/dotenv": "^5.2",
        "tuupola/slim-basic-auth": "^3.3",
        "php-amqplib/php-amqplib": "^3.0",
        "ext-json": "*",
        "illuminate/database": "~5.1"
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit --stop-on-failure",
        "feature-test": "phpunit --testsuite feature --stop-on-failure",
        "unit-test": "phpunit --testsuite unit --stop-on-failure",
        "migrate": "php database/Migrate.php"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "fakerphp/faker": "^1.19"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Config\\": "config/",
            "Database\\Migrations\\": "database/migrations/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
